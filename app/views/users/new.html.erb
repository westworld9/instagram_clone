<div class="container mt-5">
  <div class="row">  
    <div class="col-md-7 d-none d-md-block top-image">
      <%= image_tag "/assets/beach.jpg", class:"menu-image" %>
    </div>  
    <div class="col-md-5 sign">
      <%= render :partial =>"layouts/errors" %>
        <div class="sign-name">
          <h2>Instagram Clone</h2> 
          <p>登録して画像を共有しよう</p>
        </div>
      <%= form_with(model: @user, local: true ) do |f| %> 
        <div class="form-group">
          <%= f.text_field :name, class:"form-control", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class:"form-control" , placeholder:"メールアドレス"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class:"form-control", placeholder:"パスワード" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class:"form-control",  placeholder:"パスワード確認" %>
        </div>
        <div>
          <label for="file_photo">
            ＋プロフィール画像を選択
            <%= image_tag(@user.icon.url) if @user.icon.url %>
            <%= f.file_field :icon,id:"file_photo",style:"display:none;"%>
          </label>
        </div>
        <div class="form-group">
          <%= f.submit "登録", class: "btn btn-primary btn-lg btn-block" %>
        </div>
        <%= link_to "アカウントをお持ちですか？",new_session_path %>
        <% end %> 
      </div>
  </div>
</div>